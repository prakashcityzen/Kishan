<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:text="TextView"
        android:lineSpacingExtra="8sp"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/khaire"

        android:layout_below="@id/textView3"/>

    <Button
        android:id="@+id/audio_patkofedplay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/sound_on"
        android:onClick="patkofed_clickplay"
        android:text=""
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/audio_patkofedstop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="41dp"
        android:onClick="patkofed_clickpause"
        android:text=""
        android:background="@drawable/sound_off"
        android:layout_toRightOf="@+id/audio_patkofedplay"
        android:layout_alignBottom="@+id/audio_patkofedplay" />
</RelativeLayout>

</ScrollView>
